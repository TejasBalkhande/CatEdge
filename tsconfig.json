{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["./node_modules/@types", "./types"],

    // explicitly include these ambient type packages
    "types": [
      "node",
      "bcryptjs",
      "cookie",
      "jsonwebtoken",
      "ms",
      "prop-types",
      "react",
      "react-dom"
    ],

    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // âœ… This is key!
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },

    "plugins": [{ "name": "next" }]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "models/**/*",
    "next-env.d.ts",
    "types/**/*",
    "utils/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
